<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前(代表者)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :name, class:"input-default", id:"name", placeholder:"例) 田中 太郎", maxlength:"20" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

 <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">変更後パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">変更後パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">現在のパスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :current_password, class:"input-default", id:"password-confirmation", placeholder:"現在のパスワードを入力して下さい" %>
  </div>
  <div class="form-group">
    <p class='form-info-header'>
  </div>
  <div class="form-top-text">〜 利用者様情報 〜</div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :facility_user, class:"input-default", id:"name", placeholder:"例) 田中 太郎", maxlength:"20" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">電話番号(緊急連絡先)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11"%>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">血液型</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.select :blood_type, options_for_select(["選択してください", "A型", "B型", "AB型", "O型", "不明"].map { |blood_type| [blood_type, blood_type, { disabled: blood_type == "選択してください" }] }), {}, class: "input-default", id: "blood_type" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">利用開始日</label>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :start_date,
                    class:'select-birth',
                    id:"start_date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                   "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>
  <div class='register-btn'><br><br>
    <%= f.submit "確定" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>
<%= link_to "Back", :back,class:"register-red-btn"  %>
